<% if flash[:notice] %>
	<div class="flash notice">
  	 <span id="notice"><%= flash[:notice] %></span>
	</div>
<% elsif flash[:danger] %>
	<div class="flash danger">
	  <span id="danger"><%= flash[:danger] %></span>
	</div>
<% elsif flash[:alert] %>
	<div class="flash alert">
	  <span id="alert"><%= flash[:alert] %></span>
	</div>
<% end %>
