<% if user_signed_in? %>
	<% if post.liked_by?(current_user) %>
		<%= link_to post_likes_path(post), method: :delete do %>
			<dd><i class = "fa fa-heart" aria-hidden = "true" style = "color:red;"></i><%= post.likes.count %>いいね</dd>
		<% end %>
	<% else %>
		<%= link_to post_likes_path(post), method: :post do %>
			<dd><i class = "fa fa-heart" aria-hidden = "true"></i><%= post.likes.count %>いいね</dd>
		<% end %>
	<% end %>
<% else %>
	<dd><i class = "far fa-heart" aria-hidden = "true" style = "color:red;"></i><%= post.likes.count %>いいねされています</dd>
<% end %>