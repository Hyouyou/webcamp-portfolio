<div id = "row">
<%= render 'layouts/notifications' %>
	<div id = "head">
		<h1>投稿作成</h1>
	</div>
	<%= form_with model:@post, local: true do |f| %>
		<!--<lavel for = "image">-->
			<div class = "col-xs-5 col-xs-offset-1 prev-img">
				<div class = "file-img">
					<%= attachment_image_tag @post, :post_image, fallback: "no_image.jpg" %>
				</div>
				<%= f.attachment_field :post_image %>
			</div>
		<!--</lavel>-->

		<div class = "col-xs-5 text-center">
			<%= render "layouts/error_message", model:@post %>
			<div class = "new-post-form">
				<div class = "post-new">
					<span class = "title-info">タイトル</span>
					<%= f.text_field :title %>
				</div>
				<div class = "post-new">
					<span class = "condition-info">商品状態</span>
					<%= f.select :condition, Post.conditions.keys %>
				</div>
				<div class = "post-new">
					<span class = "sales-info">売上高</span>
					<%= f.text_field :selling_price %>円
				</div>
				<div class = "post-new">
					<span class = "burden-info">送料負担</span>
					<% label :is_burden, "", value: true %>
					<%= f.radio_button :is_burden, true %>出品者負担
					<% label :is_burden, "", value: false %>
					<%= f.radio_button :is_burden, false %>購入者負担
				</div>
				<div class = "post-new">
					<span class = "body-info"></span>
					<%= f.text_area :explanation, size: "50x5", placeholder: "詳細な情報" %>
				</div>
				<div class = "new-post-btn">
					<%= f.submit "投稿する", class:"btn" %>
				</div>
			</div>
		</div>
	<% end %>
</div>

