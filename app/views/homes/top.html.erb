<div class = "row">
<%= render 'layouts/notifications' %>
	<div class = "search-box">
		<%= search_form_for @search, url:search_posts_path do |f| %>
			<div class = "search-form text-center">
				<%= f.search_field :title_or_explanation_cont, placeholder: "Let's search for what you want to sell !!", size: 40 %>
				<%= f.button class: "search-btn btn btn-default" do %>
					<i class="glyphicon glyphicon-search"></i>
				<% end %>
			</div>
		<% end %>
	</div>
</div>
<h2>(最近の投稿)</h2>
<div class= "row">
	<% @posts.each do |post| %>
		<div class = "randam-contents col-xs-6 col-md-3" style = "padding-left:30px;">
			<div class = "thumbnail">
				<%= attachment_image_tag post, :post_image, :fill, 200, 200, fallback:"no_image.jpg", class:"img-circle" %>
				<div class = "caption">
					<h3><%= post.title %></h3>
					<p><%= post.created_at.strftime('%Y/%m/%d') %>に投稿されました。</p>

					<%= render 'posts/like', post: post %>
					<%= link_to post_path(post.id), class:"btn btn-default" do %>
						<p>詳細を見る<span class="glyphicon glyphicon-circle-arrow-right" aria-hidden="true"></span></p>
					<% end %>
				</div>
			</div>
		</div>
	<% end %>
</div>
<div class = "row">
	<h2>At your service</h2>
	<hr class = "line">
</div>
<div class = "row">
	<div class = "col-xs-3">
		<div class = "point">
			<i class="glyphicon glyphicon-share" aria-hidden="true"></i>
			<h3>Share</h3>
			<p class = "icon-text text-muted">Easily share your experience</p>
		</div>
	</div>
	<div class = "col-xs-3">
		<div class = "point">
			<i class="glyphicon glyphicon-search" aria-hidden="true"></i>
			<h3>Research</h3>
			<p class = "icon-text text-muted">You can quickly find what you want to know</p>
		</div>
	</div>
	<div class = "col-xs-3">
		<div class = "point">
			<i class="glyphicon glyphicon-question-sign" aria-hidden="true"></i>
			<h3>Question</h3>
			<p class = "icon-text text-muted">You can ask any question immediately</p>
		</div>
	</div>
	<div class = "col-xs-3">
		<div class = "point">
			<!--ここにかっこいいやついれる-->
			<h3>見出し</h3>
			<p class = "icon-text text-muted">テキスト</p>
		</div>
	</div>
</div>
