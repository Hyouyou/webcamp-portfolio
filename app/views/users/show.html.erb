<div class = "row">
	<h1><%= @user.name %>のマイページ</h1>

	<div class= "col-xs-6">
		<div class="user-info text-center">
			<%= attachment_image_tag @user, :user_image, :fill, 40, 40, fallback: "no_image.jpg" %>
			<h3>ニックネーム</h3>
			<p><%= @user.name %></p>
		</div>
	</div>

	<div class = "col-xs-6">
		<div class = "user-post">
			<table class = "table table-hover">
				<tr>
					<th>投稿日</th>
					<th>タイトル</th>
				</tr>

				<% if @user.posts.present? %>
					<% @user.posts.each do |post| %>
						<tr>
							<td><%= post.created_at.strftime('%Y/%m/%d') %></td>
							<td>
								<%= link_to post_path(post.id) do %>
									<%= post.title %>
								<% end %>
							</td>
						</tr>
					<% end %>
				<% else %>
					<h3>まだ投稿はありません</h3>
				<% end %>
			</table>
		</div>
	</div>
</div>
