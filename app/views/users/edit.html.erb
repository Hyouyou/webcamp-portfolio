<div class = "row">
	<div class = "col-xs-offset-4 col-xs-4">
		<h1>会員情報編集ページ</h1>
		<%= render 'layouts/flash' %>
		<%= render "layouts/error_message", model:@user %>
		
		<div class = "edit-user-form text-center">
			<%= form_with model:@user, local: true do |f| %>
				<div class = "form">
					<span class = "name-info">ニックネーム</span>
					<%= f.text_field :name, autofocus: true, placeholder:"ニックネーム" %>
				</div>
				<div class = "form">
					<!--<span class = "user-image-info"></span>-->
					<%= attachment_image_tag @user, :user_image, :fill, 200, 200, fallback: "no_image.jpg" %>
					<%= f.attachment_field :user_image, placeholder:"プロフィール画像" %>
				</div>
				<div class = "action">
					<%= f.submit "変更", class:"btn btn-default" %>
				</div>
				<div class = "action">
					<%= link_to "退会", user_registration_path, method: :delete, class:"btn btn-danger", data:{confirm:"退会処理を行います。よろしいですか？"} %>
				</div>
			<% end %>
		</div>
	</div>
</div>