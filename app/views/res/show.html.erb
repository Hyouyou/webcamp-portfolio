<div class = "head-box row">
	<div id = "head">
		<h1><%= @re.title %></h1>
	</div>
	<div class = "col-xs-5 col-xs-offset-1">
		<div class = "post-show-img text-center">
			<%= attachment_image_tag @re, :re_image, size:"300x300", fallback: "no_image.jpg" %>
		</div>
	</div>

	<div class = "col-xs-5">
		<dl class = "single-post">
			<dt class = "re-show">
				<dd class = "cycle-show">商品状態：<%= @re.cycle %></dd>
			</dt>
			<dt class = "re-show">
				<%= render 'posts/like', post: @re %>
			</dt>
			<dt class = "re-show">
				<dd class = "content-show">説明：<%= @re.content %></dd>
			</dt>
		</dl>
		<% if @re.user == current_user %>
			<div class = "edit-post-btn text-center">
				<%= link_to "編集する", edit_re_path(@re.id), class:"btn", method: :get %>
			</div>
		<% end %>
	</div>
</div>
<div class = "row ">
	<div class = "comment-area col-xs-6 col-xs-offset-3">
		<div class = "profile-area">
			<h3>投稿者</h3>
			<%= attachment_image_tag @re.user, :user_image, size:"60x60", fallback:"no_image.jpg", class:"img-circle profile-thumb center-block" %>
			<%= link_to user_path(@re.user) do %>
				<p><%= @re.user.name %></p>
			<% end %>
		</div>

		<div class = "comment-table">
			<h3>質問一覧</h3>
			<table class = "table table-border">
				<% if @re_comments.present? %>
					<tr>
						<th>質問者</th>
						<th>日時</th>
						<th>質問内容</th>
					</tr>
					<% @re_comments.each do |comment| %>
						<tr>
							<td width = "90">
								<%= comment.user.name %>さん
								<% if re_comment.user == current_user %>
									<div class = "comment-delete-btn">
										<%= link_to "delete", re_re_comments_path(@re, re_comments.id), method: :delete, class: "btn btn-danger btn-xs", data: {confirm: '質問を削除します。よろしいですか？'}%>
									</div>
								<% end %>
							</td>
							<td><%= comment.created_at.strftime('%Y/%m/%d') %></td>
							<td><%= comment.comment %></td>
						</tr>
					<% end %>
				<% else %>
					<h4>この投稿に対する質問はありません</h4>
				<% end %>
				<%= paginate @re_comments %>
			</table>
		</div>

		<div class = "invite-box">
			<% if user_signed_in? %>
				<%= form_for [@re, @re_comment] do |f| %>
					<div class = "new-comment-form">
						<%= f.text_area :body, size: "70x5", placeholder: "質問してみる", id:"comment-text" %>
					</div>
					<%= f.submit "質問する", id:"comment-submit", class: "btn btn-primary" %>
				<% end %>
			<% else %>
				<div class = "invite-new-user text-center">
					<h3>あなたも質問してみませんか？</h3>
					<%= link_to "新規登録", new_user_registration_path, class:"btn btn-primary" %>
					<p>既にアカウントを持っている方は<%= link_to "ログイン", new_user_session_path %></p>
				</div>
			<% end %>
		</div>
	</div>
</div>